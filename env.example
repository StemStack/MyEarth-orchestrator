# MyEarth.app Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_NAME=myearth
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# Alternative: Use DATABASE_URL for full connection string
# DATABASE_URL=postgresql://username:password@localhost:5432/myearth

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# ========================================
# OAUTH2 PROVIDER CONFIGURATION
# ========================================

# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth2
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# LinkedIn OAuth2
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# ========================================
# APPLICATION CONFIGURATION
# ========================================
PORT=5000
DEBUG=True
ENVIRONMENT=development

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_FILE_SIZE=524288000  # 500MB in bytes
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=.geojson,.shp,.gpkg,.kml,.kmz,.zip

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=INFO
LOG_FILE=myearth.log

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Session configuration
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_EXPIRE_HOURS=24

# ========================================
# EXTERNAL SERVICES
# ========================================

# Cesium Ion (optional - for 3D tiles hosting)
CESIUM_ION_ACCESS_TOKEN=your_cesium_ion_token_here

# Map services (optional)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
ESRI_API_KEY=your_esri_api_key_here

# ========================================
# EMAIL CONFIGURATION (optional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@myearth.app

# ========================================
# MONITORING (optional)
# ========================================
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================
# For production deployment
PRODUCTION=False
FORCE_HTTPS=False
SECURE_COOKIES=False

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_USER_REGISTRATION=True
ENABLE_EMAIL_VERIFICATION=False
ENABLE_SOCIAL_LOGIN=True
ENABLE_FILE_UPLOADS=True
ENABLE_LAYER_RATINGS=True
ENABLE_COMMENTS=False

# ========================================
# LIMITS AND QUOTAS
# ========================================
MAX_LAYERS_PER_USER=100
MAX_FILE_SIZE_FREE=52428800  # 50MB for free users
MAX_FILE_SIZE_PREMIUM=524288000  # 500MB for premium users
MAX_STORAGE_FREE=1073741824  # 1GB for free users
MAX_STORAGE_PREMIUM=10737418240  # 10GB for premium users
